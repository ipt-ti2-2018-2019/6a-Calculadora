
@{
   ViewBag.Title = "Calculadora";
}

<h2>A minha calculadora</h2>

@* início da calculadora *@

@using(Html.BeginForm()) {@*<form></form>*@

@* criar a tabela com os botões da calculadora *@
<table>
   <tr>
      <td colspan="5">
         <input type="text" readonly="readonly" name="visor" value="0" />
      </td>
   </tr>
   <tr>
      <td><input type="submit" name="" value="7" /></td>
      <td><input type="submit" name="" value="8" /></td>
      <td><input type="submit" name="" value="9" /></td>
      <td><input type="submit" name="" value=":" /></td>
      <td><input type="submit" name="" value="+/-" /></td>
   </tr>
   <tr>
      <td><input type="submit" name="" value="4" /></td>
      <td><input type="submit" name="" value="5" /></td>
      <td><input type="submit" name="" value="6" /></td>
      <td><input type="submit" name="" value="x" /></td>
      <td><input type="submit" name="" value="C" class="btn btn-danger" /></td>
   </tr>
   <tr>
      <td><input type="submit" name="" value="1" /></td>
      <td><input type="submit" name="" value="2" /></td>
      <td><input type="submit" name="" value="3" /></td>
      <td><input type="submit" name="" value="-" /></td>
      <td rowspan="2"><input type="submit" name="" value="=" /></td>
   </tr>
   <tr>
      <td colspan="2"><input type="submit" name="" value="0" /></td>
      <td><input type="submit" name="" value="," /></td>
      <td><input type="submit" name="" value="+" /></td>
   </tr>

</table>




